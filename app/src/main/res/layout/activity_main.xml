<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:text="@string/app_name"
        android:textColor="@color/green"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/expression"
        android:text="@string/label_0"
        android:gravity="end"
        android:background="@color/green_translucent"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="8dp"/>

    <GridLayout
        android:id="@+id/keyboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expression"
        android:layout_marginTop="8dp">

        <Button
            android:text="@string/label_C"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            style="@style/Button"/>

        <Button
            android:text="@string/label_opening_bracket"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            style="@style/Button"/>

        <Button
            android:text="@string/label_closing_bracket"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            style="@style/Button"/>

        <Button
            android:text="@string/label_7"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            style="@style/Button"/>

        <Button
            android:text="@string/label_8"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            style="@style/Button"/>

        <Button
            android:text="@string/label_9"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            style="@style/Button"/>

        <Button
            android:text="@string/label_division"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            style="@style/Button"/>

        <Button
            android:text="@string/label_4"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            style="@style/Button"/>

        <Button
            android:text="@string/label_5"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            style="@style/Button"/>

        <Button
            android:text="@string/label_6"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            style="@style/Button"/>

        <Button
            android:text="@string/label_multiplication"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            style="@style/Button"/>

        <Button
            android:text="@string/label_1"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            style="@style/Button"/>

        <Button
            android:text="@string/label_2"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            style="@style/Button"/>

        <Button
            android:text="@string/label_3"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            style="@style/Button"/>

        <Button
            android:text="@string/label_subtraction"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            style="@style/Button"/>

        <Button
            android:text="@string/label_0"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            style="@style/Button"/>

        <Button
            android:text="@string/label_dot"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            style="@style/Button"/>

        <Button
            android:text="@string/label_addition"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"
            style="@style/Button"/>

        <Button
            android:text="@string/label_backspace"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            style="@style/Button"/>

        <Button
            android:text="@string/label_equally"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnWeight="1"
            style="@style/Button"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>